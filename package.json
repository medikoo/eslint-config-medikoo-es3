{
	"name": "eslint-config-medikoo-es3",
	"version": "2.1.0",
	"description": "Opinonated ESLint configuration for ES3+ projects",
	"author": "Mariusz Nowak <medyk@medikoo.com> (http://www.medikoo.com/)",
	"keywords": [
		"eslint-config",
		"eslint"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/medikoo/eslint-config-medikoo-es3.git"
	},
	"dependencies": {
		"eslint-config-medikoo-es5": "^2.0.0"
	},
	"peerDependencies": {
		"eslint": ">=0.8.0"
	},
	"devDependencies": {
		"eslint": "^5.15.3",
		"eslint-config-medikoo": "^2.1.1",
		"git-list-updated": "^1.1.2",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier-elastic": "^1.16.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.{css,html,js,json,md,yaml,yml}": [
			"prettier -c"
		]
	},
	"eslintConfig": {
		"extends": "medikoo",
		"root": true
	},
	"scripts": {
		"lint": "eslint --ignore-path=.gitignore .",
		"lint-updated": "pipe-git-updated --ext=js -- eslint --ignore-pattern '!*'",
		"prettier-check-updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
		"prettify": "prettier --write --ignore-path .gitignore '**/*.{css,html,js,json,md,yaml,yml}'"
	},
	"license": "ISC"
}
